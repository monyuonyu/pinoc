#ifndef __LOWCALL32__
#define __LOWCALL32__

#include "../../common/typedef.h"
#include "../../common/global.h"
#include "../../lib/string.h"
//#include "protectmode.h"

/* io_hlt32 */
__asm__(
		"io_fin32:		\n\t"
		"hlt    		\n\t"
		"ret			\n\t"
);

/* io_fin32 */
__asm__(
		"io_hlt32:		\n\t"
		"hlt    		\n\t"
		"jmp io_hlt32	\n\t"
);


/* io_out8 */
__asm__(
		"io_out8:				\n\t"
		"movl 4(%esp), %edx	\n\t"
		"movl 8(%esp), %eax	\n\t"
		"outb %al ,%dx 		\n\t"
		"ret					\n\t"
);

vo io_write32(si xsize, si ysize, si xSrc, si ySrc, s1 color);
vo io_sd32(SD* _sd, ui base, ui limit, u1 a, u1 type, u1 s, u1 dpl, u1 p, u1 avl,
		u1 db, u1 g);

#endif
